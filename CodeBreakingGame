public class FixedCodeB
{
    private String [] num = new String [4];
    private String [] guessList = new String[4];
    private boolean [] rightNums = new boolean[4];
    private int count = 0;

    /**
     * Constructor for objects of class FixedCodeB
     */
    public FixedCodeB(String pNum)
    {
        // loop used in case game was improved to have player 2 guess a number that has more than 4 digits
        for (int i = 0; i < pNum.length(); i++)
        {
            num[i] = pNum.substring(i, i+1);
        }
    }

    public void play()
    {
        //numAppearances();
        int print = 0;
        int guesses = 0;
        int w = 0;
        Scanner scan = new Scanner(System.in);
        do
        {
            //added this in to reset the number of correct digits and the values in rightNums
            w=0;
            rightNums = new boolean[4];
            System.out.println("Guess a number.");
            // guess needs to be four digits long
            String guess = scan.nextLine();
            guesses++;
            for (int i = 0; i < guess.length(); i++)
            {
                guessList[i] = guess.substring(i, i+1);
            }
            for (int j = 0; j < guessList.length; j++)
            {
                if (guessList[j].equals(num[j]))
                {
                    System.out.println(guessList[j] + " is in the right position.");
                    w++;
                }
                else
                {
                    for (int h = 0; h < num.length; h++)
                    {
                        if (num[h].equals(guessList[j]) && h!=j && !rightNums[h])
                        {
                            System.out.println("The number " + guessList[j] + " is in the list.");
                        }  
                    }
                }  
            }
        }
        while (w < 4);
        System.out.println("You won!");
        System.out.println("It took " + guesses + " guesses.");
    }
}

